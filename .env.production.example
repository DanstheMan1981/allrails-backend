# ===========================================
# AllRails Backend — Production Environment
# ===========================================
# Railway sets PORT automatically. Do NOT set it manually.

# Database (Railway provisions PostgreSQL — use the reference variable)
# In Railway dashboard: ${{Postgres.DATABASE_URL}}
DATABASE_URL="postgresql://user:password@host:5432/railway?schema=public"

# JWT — generate a strong secret: openssl rand -hex 32
JWT_SECRET="CHANGE_ME_TO_A_STRONG_SECRET"
JWT_EXPIRATION="7d"

# App
NODE_ENV=production
FRONTEND_URL="https://your-frontend-domain.vercel.app"
